# Check that dependencies are installed
exec_dependencies=( 'jpegoptim' )
for exec in ${exec_dependencies[@]}; do
  type $exec > /dev/null 2>&1
  if [[ $? > 0 ]]; then
    echo "Error: the '${exec}' program is required."
    exit 1
  fi
done

# Run
jpegoptim -pt --strip-all $@
